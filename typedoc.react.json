{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["packages/react/src/typedoc-entry.ts"],
  "tsconfig": "packages/react/tsconfig.json",
  "plugin": ["typedoc-plugin-markdown"],
  "out": "generated/docs/react/api-reference",

  "excludePrivate": true,
  "excludeProtected": true,
  "excludeInternal": true,
  "excludeNotDocumented": false,
  "excludeExternals": true,
  "hideGenerator": true,
  "readme": "none",
  "disableSources": true,
  "sanitizeComments": true,
  "groupOrder": ["Functions", "Classes", "Type Aliases", "Interfaces"],

  "outputFileStrategy": "members",
  "flattenOutputFiles": true,
  "hideBreadcrumbs": true,
  "hidePageHeader": true,
  "useCodeBlocks": true,
  "expandObjects": true,
  "parametersFormat": "table",
  "propertiesFormat": "table",
  "typeDeclarationFormat": "table",
  "enumMembersFormat": "table",
  "indexFormat": "table",
  "tableColumnSettings": {
    "hideDefaults": false,
    "hideInherited": true,
    "hideOverrides": true,
    "hideSources": true,
    "hideModifiers": true
  }
}
